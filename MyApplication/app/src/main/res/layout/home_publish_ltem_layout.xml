<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/publish_item_height"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/publish_item_one"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="@drawable/home_business_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/publish_item_one_image"
            style="@style/home_publish_image_style"
            />

        <TextView
            android:id="@+id/publish_item_one_text"
            style="@style/home_publish_text_style"
            android:layout_below="@id/publish_item_one_image" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/publish_item_two"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="@drawable/home_business_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/publish_item_two_image"
            style="@style/home_publish_image_style"
            />

        <TextView
            android:id="@+id/publish_item_two_text"
            style="@style/home_publish_text_style"
            android:layout_below="@id/publish_item_two_image" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/publish_item_three"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="@drawable/home_business_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/publish_item_three_image"
            style="@style/home_publish_image_style"
            />

        <TextView
            android:id="@+id/publish_item_three_text"
            style="@style/home_publish_text_style"
            android:layout_below="@id/publish_item_three_image" />
    </LinearLayout>
</LinearLayout>