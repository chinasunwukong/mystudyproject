<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/popu_view"
    android:layout_width="fill_parent"
    android:layout_height="46dp"
    android:layout_below="@id/publish_listview"
    android:background="@color/white"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/popu_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        android:textSize="14sp" />

    <Button
        android:id="@+id/popu_phone_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dip"
        android:layout_toLeftOf="@id/popu_phone"
         />

    <TextView
        android:id="@+id/popu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_toLeftOf="@id/popu_phone_call"
        android:singleLine="true"
        android:textSize="14sp" />

</RelativeLayout>